<div class="cform-field {FIELD_CLASS}" style="{FIELD_STYLE}">

    <label for="{ID}" class="uk-form-label {LABEL_CLASS}" title="{LABEL_TITLE}" {TOOLTIP} style="{LABEL_STYLE}">{LABEL}</label>

    <div class="uk-form-controls {CONTROLS_CLASS}" style="{CONTROLS_STYLE}">
        {PREV_ICON}
        <div class="password-line">
            <a class="uk-form-icon uk-form-icon-flip password-toggle" href="#" uk-icon="icon: lock"></a>
            <input type="password" id="{ID}" name="{NAME}" class="uk-input uk-form-password-toggle {CLASS}" placeholder="{PLACEHOLDER}" data-new-placeholder="{TOP_PLACEHOLDER}" style="{STYLE}" {REQUIRED}>
        </div>
        {INIT}
    </div>

</div>
