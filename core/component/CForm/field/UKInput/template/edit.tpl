    <div class="uk-form-controls {CONTROLS_CLASS}" style="{CONTROLS_STYLE}">
        <input type="text" id="{ID}" name="{FIELD}" class="uk-input {CLASS}" placeholder="{PLACEHOLDER}" style="{STYLE}" value="{VALUE}" {REQUIRED}>
    </div>
</div>
